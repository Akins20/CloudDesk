# Server Configuration
NODE_ENV=development
PORT=3000

# Database
MONGODB_URI=mongodb://localhost:27017/clouddesk

# JWT Configuration
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_ACCESS_SECRET=your-256-bit-access-secret-key-here
JWT_REFRESH_SECRET=your-256-bit-refresh-secret-key-here
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Encryption Key for SSH Credentials
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your-256-bit-encryption-key-here

# SSH Tunnel Port Range
TUNNEL_PORT_RANGE_START=6000
TUNNEL_PORT_RANGE_END=7000

# WebSocket Port Range for VNC Proxy
WEBSOCKET_PORT_RANGE_START=6080
WEBSOCKET_PORT_RANGE_END=6180

# Session Configuration
SESSION_TIMEOUT_MINUTES=30

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:5173

# Logging
LOG_LEVEL=debug
